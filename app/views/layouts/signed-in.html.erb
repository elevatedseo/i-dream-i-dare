<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="ROBOTS" content="NOODP" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Archivo">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <%= stylesheet_link_tag("application") %>
  <%= csrf_meta_tags %>

  <title><%= title %></title>
</head>

<div id="top-nav" class="navbar navbar-inverse navbar-static-top">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" data-position="fixed" top="0px">
      <span class="icon-toggle"></span>
    </button>
    <a class="navbar-brand" href="/">
        <img src="../../assets/branding/DreamCatcher_Feather_Transparent_Small.png" style="float:left;">
      <div style="float:right; padding-top: 5px;"><%= current_user.first_name %>'s Dashboard</div></a>
  </div>
  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav pull-right">
      <!-- Social Icons: -->
      <a class="navbar-brand" href="https://www.facebook.com/DreamCatcher-1845647825736246"><i class="fa fa-facebook"></i></a>
      <a class="navbar-brand" href="mailto:nmahupete@qliomaha.com"><i class="fa fa-envelope"></i></a>
      <li class="dropdown pull-right">
        <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#">
         <h3 class="glyphicon glyphicon-menu-hamburger" style="margin:0px;"></h3></a>
        <ul id="g-account-menu" class="dropdown-menu" role="menu">
          <% if current_user.is_an_admin? %>
            <li><a href="/user/dashboard">Admin Dashboard</a></li>
          <% else %>
            <li><a href="/user/dashboard">Main Dashboard</a></li>
            <li><a href="/user/group-dashboard">Group Dashboard</a></li>
          <% end %>

          <li><a href='/users/edit'>Edit my Account</a></li>
          <li><a href='/users/sign_out' data-method='delete'>Sign out</a></li>

        </ul>
      </li>
    </ul>
  </div>
</div>

<body class="container">
  
  <!-- The Facebook SDK -->
  <script>
    window.fbAsyncInit = function() {
      FB.init({
        appId            : 'your-app-id',
        autoLogAppEvents : true,
        xfbml            : true,
        version          : 'v3.2'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "https://connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
  </script>

  <% if current_user.is_an_admin? && current_user.is_super_admin? == false %>
    <div class="row">  
      <h2 style="color:red; float:left; margin-left:25%;">ADMIN DASHBOARD</h2>
      <ul class="dropdown" style="text-decoration:none; float:left;">
        <a class="btn btn-default " role="button" data-toggle="dropdown" href="#">
         <h4 style="margin:0px;">Navigate</h4></a>
        <ul id="g-account-menu" class="dropdown-menu" role="menu">
          <li><a href="/">Users</a></li>
          <li><a href="/mentorships">Mentorships</a></li>
          <li><a href="/plans">Plans</a></li>
          <li><a href="/messages">User Messages</a></li>
          <li><a href="/groups">Groups</a></li>
          <li><a href="/content_fields">Content Fields</a></li>
          <li><a href="/images">Images</a></li>
          <li><a href="/quotes">Quotes</a></li>
          <li><a href="/resources">Resources</a></li>
        </ul>
      </ul>
    </div>

  <% elsif current_user.is_super_admin? %>

    <div class="row">  
      <h2 style="color:red; float:left; margin-left:25%;">SUPER ADMIN DASHBOARD</h2>
      <ul class="dropdown" style="text-decoration:none; float:left;">
        <a class="btn btn-default " role="button" data-toggle="dropdown" href="#">
         <h4 style="margin:0px;">Navigate</h4></a>
        <ul id="g-account-menu" class="dropdown-menu" role="menu">
          <li><a href="/">New Users</a></li>
          <li><a href="/admin_messages">Admin Messages</a></li>
          <li><a href="/bios">Public Bios</a></li>
          <li><a href="/bio_questions">Bio Questions</a></li>
          <li><a href="/bio_answers">Bio Answers</a></li>
          <li><a href="/book_resources">Book Resources</a></li>
        </ul>
      </ul>
    </div>

  <% end %>
  
  <!-- <div>SIGNED-IN LAYOUT RENDERED</div> -->

  <%= yield %> 

  </body>
</html>
  <%= javascript_include_tag "application" %>
  <%= render "css_overrides" %>

