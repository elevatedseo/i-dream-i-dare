<p id="notice"><%= notice %></p>

<h1>Listing User Schedules</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Schedule</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_schedules.each do |user_schedule| %>
      <tr>
        <td><%= user_schedule.user_id %></td>
        <td><%= user_schedule.schedule_id %></td>
        <td><%= user_schedule.completed %></td>
        <td><%= link_to 'Show', user_schedule %></td>
        <td><%= link_to 'Edit', edit_user_schedule_path(user_schedule) %></td>
        <td><%= link_to 'Destroy', user_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

