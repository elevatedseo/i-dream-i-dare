  <h2>All Users:</h2>

  <div class="row">
  <div class="col">col</div>
  <div class="col">col</div>
  <div class="w-100"></div>
  <div class="col">col</div>
  <div class="col">col</div>
  </div>

  <div class="container">
    <% @users.each do |u| %>
      <div class="row">
        <div class="col-4">
          <%= u.id %> 
        </div>
        <div class="col-4">
          <%= u.first_name %> <%= u.last_name %> 
        </div>
        <div class="col-4">
          <%= u.email %> 
        </div>

      </div>
    </div>
        <div class="col-med">
          <% if u.is_a_coach == nil || u.is_an_admin == nil%>
            <a href="/activate_user/<%= u.id %>"><font color="orange">ACTIVATE USER (sets both admin and coach to false)</font></a>
          <% else %>
            <%= u.first_name %> is a Coach? <%= u.is_a_coach %><a href="/toggle_coach/<%= u.id %>"><button>TOGGLE</button></a>
            <%= u.first_name %> is an Admin? <%= u.is_an_admin %><a href="/toggle_admin/<%= u.id %>"><button>TOGGLE</button></a>
          <% end %>
        </div>
        <div class="col-med">
          <% if u.is_an_admin? %>
              <font color="red"><strong>WARNING: If you are <%= u.first_name %>, toggling your Admin priviliges will lock you out of the system immediately.</strong></font><br>
          <% end %>
        </div>
      </div>
    <% end %>

  <h2>Admin messages</h2> 
  
  <% @all_admin_messages.each do |a| %>
    <li>From: <%= a.from_name %></li>
    <li>Email: <%= a.from_email %></li>
    <li>Message: <%= a.content %></li>

    ----------------------------------<br>

  <% end %>

  <a href="/admin_messages">Admin Messages Index</a><br>

