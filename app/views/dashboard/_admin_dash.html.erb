 <h1>Admin Users</h1>
<table class="table table-bordered table-striped" >
  <thead>
    <tr>
      <th>
        Id
      </th>
      <th>
        Name
      </th>
      <th>
        Email
      </th>
      <th>
        Coach?
      </th>
      <th>
        Admin?
      </th>
      <th>
        Active?
      </th>
      <th>
        Deleted?
      </th>
    </tr>
  </thead>
  <tbody>
    <% if @admins != nil %>
      <% @admins.each do |u| %>
        <tr class="<%= u.is_active? ? '' : 'inactive_table_row_item' %>">

          <th>
            <%= u.id %>
          </th>
          <th>
            <%= u.first_name %> <%= u.last_name %>
          </th>
          <th>
            <%= u.email %>
          </th>
          <th>
            <%= u.is_a_coach %>   <a href="/toggle_coach/<%= u.id %>"><button>Toggle</button></a>
          </th>
          <th>
            <%= u.is_an_admin %>   <a href="/toggle_admin/<%= u.id %>"><button>Toggle</button></a>
          </th>
          <th>
            <%= u.is_active %>   <a href="/toggle_active/<%= u.id %>"><button>Toggle</button></a>
          </th>
          <th>
            <%= u.is_deleted %>   <a href="/toggle_deleted/<%= u.id %>"><button>Toggle</button></a>
          </th>
        </tr> 
      <% end %>
    <% end %>
  </tbody>
</table>  
  
