                  <div class="panel-heading">
                    <strong>MESSAGES</strong>
                  </div>
                  
                  <div class="panel-body">

                    <% @user_messages.each do |m| %>
                      

                        <% if m.from == current_user.id %>

                          <div class="outgoing-bubble">
                          <%= m.content %>
                          </div>

                          <div class="bubble-spacer">
                          </div>

                        <% else %>

                          <div class="incoming-bubble">
