<p id="notice"><%= notice %></p>

<h1>Listing Content Fields</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_fields.each do |content_field| %>
      <tr>
        <td><%= content_field.name %></td>
        <td><%= content_field.value %></td>
        <td><%= link_to 'Show', content_field %></td>
        <td><%= link_to 'Edit', edit_content_field_path(content_field) %></td>
        <td><%= link_to 'Destroy', content_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

