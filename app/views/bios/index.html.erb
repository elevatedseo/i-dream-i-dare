<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Profile Image</th>
      <th>Profile Image Source</th>
      <th>User</th>
      <th>Profile text</th>
      <th>Style text</th>
      <th>Expertise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bios.each do |bio| %>
      <tr>
        <td><img src="<%= bio.profile_image %>" class="img-rounded" alt="Cinque Terre" height="50" width="50"></td>
        <td><%= bio.profile_image %></td>
        <td><%= bio.user_id %></td>
        <td><%= bio.profile_text %></td>
        <td><%= bio.style_text %></td>
        <td><%= bio.expertise %></td>
        <td><%= link_to 'Show', bio %></td>
        <td><%= link_to 'Edit', edit_bio_path(bio) %></td>
        <td><%= link_to 'Destroy', bio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
