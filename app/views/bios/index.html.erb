<h1>Our Team!</h1>

<div class="container">

  <% @bios.each do |bio| %> 
    <div class="panel panel-default">
        <div class="bio-pic" style="float:left;">
          <img src="<%=bio.profile_image%>" class="img-rounded" alt="Cinque Terre" height="200" width="200">
        </div>

        <div class="bio-name">
          <%= @bio_users.select{|u| u.id == bio.user_id}[0].first_name %> <%= @bio_users.select{|u| u.id == bio.user_id}[0].last_name %>
        </div>

        <div class="bio-profile">
          <%= bio.profile_text %>
        </div>

        <div class="bio-style">
          <%= bio.style_text %>
        </div>

        <div class="bio-expertise">
          <%= bio.expertise %>
        </div>
          
  <% end %>

    </div>
<!--     <br /> -->

  <% #end %>

</div>


<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Profile text</th>
      <th>Style text</th>
      <th>Expertise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bios.each do |bio| %>
      <tr>
        <td><%= bio.user_id %></td>
        <td><%= bio.profile_text %></td>
        <td><%= bio.style_text %></td>
        <td><%= bio.expertise %></td>
        <td><%= link_to 'Show', bio %></td>
        <td><%= link_to 'Edit', edit_bio_path(bio) %></td>
        <td><%= link_to 'Destroy', bio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
