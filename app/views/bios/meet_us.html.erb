<center><%= render '/shared/public_logo_and_nav' %></center>

<hr />

<% @bios.each do |bio| %> 
  <div class="bio_coach_profile">
    <div class="name">
      <%= @bio_users.select{|u| u.id == bio.user_id}[0].first_name %> <%= @bio_users.select{|u| u.id == bio.user_id}[0].last_name %> &ensp; <a style="font-size: 20px; color: #88b021;" href="mailto:<%= @bio_users.select{|u| u.id == bio.user_id}[0].email %>"><i class="fa fa-envelope"></i></a>
      <br />
      <hr />
    </div>
    <div class="pic">
      <img src="<%=bio.profile_image%>" class="img-rounded" height="350px" alt="/assets/branding/DreamCatcherLogo01.png">
    </div>
    <div class="body">
      <%= bio.profile_text %>
      <hr />
      Style: <%= bio.style_text %>
      <br />
      Expertise: <%= bio.expertise %>
    </div>
  </div>
  <hr />
<% end %>
