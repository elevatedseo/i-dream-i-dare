<p id="notice"><%= notice %></p>

<h1>Listing Mentorships</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Coach</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <div class="list_coaches">
  <br />COACHES-> <br />
  <% @all_coaches.each do |coach| %>
    <%= coach.id %> = <%= coach.first_name %> <%= coach.last_name %><br />
  <% end %>
</div>
<div class="list_clients">
  <br />CLIENTS-> <br />
  <% @all_clients.each do |client| %>
    <%= client.id %> = <%= client.first_name %> <%= client.last_name %><br />
  <% end %>

    <% @mentorships.each do |mentorship| %>
      <tr>
        <td><%= mentorship.client %></td>
        <td><%= mentorship.coach %></td>
        <td><%= link_to 'Show', mentorship %></td>
        <td><%= link_to 'Edit', edit_mentorship_path(mentorship) %></td>
        <td><%= link_to 'Destroy', mentorship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

