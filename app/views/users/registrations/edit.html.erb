<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="light-well">
        <h2 class="page-header text-center">Edit <%= current_user.first_name %>'s Account</h2>

        <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put },
                      html: { class: "form-horizontal center"} do |f| %>

          <a class="actions btn btn-warning btn-lg btn-block" href="/notification_preferences">
            Edit Notification Preferences
          </a>

          <hr />
          
          <div class="form-group">
            Email Address
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            SMS Phone Number (Our service is free, but message/data rates may apply.)
            <%= f.telephone_field :sms_phone_number, class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <hr />
          <div class="form-group">
            Change Password - Leave blank if you don't want to change it.
            <%= f.password_field :password, autocomplete: "off", placeholder: "New Password", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", class: "form-control" %>
            <% if @validatable %>
              <p class="help-block"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>
          <hr />

          <div class="form-group">
            Enter your current password to confirm the above changes.
            <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: "btn btn-success btn-lg btn-block" %>
          </div>
          <%= devise_error_messages! %>
        <% end %>
      </div>
      <br>
      <br>
      <h3 class="page-header text-center">Unhappy?</h3>
      <p><%= button_to "Delete my account", registration_path(resource_name), class: "btn btn-danger btn-lg btn-block", data: { confirm: "Are you sure?" }, method: :delete %></p>
      <center> <%= link_to "BACK", :back %></center>
    </div>
  </div>
</div>